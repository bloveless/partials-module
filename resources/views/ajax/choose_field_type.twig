<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::admin.choose_field_type') }}</h4>
</div>

<div class="modal-body">
    <ul class="nav nav-stacked">
        {% for field_type in field_types %}
            <li>
                <a href="{{ url_to('admin/partials/fields/create?field_type=' ~ field_type.namespace) }}">
                    <strong>{{ trans(field_type.name) }}</strong>
                    <br>
                    <small>{{ trans(field_type.description) }}</small>
                </a>
            </li>
        {% endfor %}
    </ul>
</div>
