<div class="modal-header">
    <button class="close" data-dismiss="modal">
        <span>&times;</span>
    </button>
    <h4 class="modal-title">{{ trans('module::message.choose_field') }}</h4>
</div>

<div class="modal-body">
    {% if not fields.isEmpty() %}
        <ul class="nav nav-stacked">
            {% for field in fields %}
                <li>
                    <a href="{{ url_to('admin/partials/types/fields/' ~ id ~ '/assign/' ~ field.id) }}">
                        <strong>{{ trans(field.name) }}</strong>
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        {{ trans('streams::message.no_results') }}
    {% endif %}
</div>
